{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "replacements:k8s-registry-move",
    ":automergeBranch",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest",
    "github>jalim/home-ops//.github/renovate/allowedVersions.json5",
    "github>jalim/home-ops//.github/renovate/autoMerge.json5",
    "github>jalim/home-ops//.github/renovate/commitMessage.json5",
    "github>jalim/home-ops//.github/renovate/groups.json5",
    "github>jalim/home-ops//.github/renovate/labels.json5",
    "github>jalim/home-ops//.github/renovate/customManagers.json5",
    "github>jalim/home-ops//.github/renovate/packageRules.json5",
  ],
  "assignees": ["jalim"],
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "suppressNotifications": ["prEditedNotification", "prIgnoreNotification"],
  "ignorePaths": ["**/*.sops.*", "**/.archive/**", "**/resources/**"],
  "flux": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)\\.taskfiles/.+\\.ya?ml(\\.j2)?$",
      "(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$"
    ]
  }
}
